<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="Photo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="using:Photo"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="using:Photo.Views"
        mc:Ignorable="d">

    <Grid x:Name="RootPanel">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="5*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid Grid.Column="0"
              Grid.Row="0"
              Grid.RowSpan="2"
              BorderBrush="Gray"
              BorderThickness="1">
            <StackPanel Orientation="Vertical">
                <Button Content="Import"
                        Command="{Binding ImportImageCommand}" />
                <Button Content="Export" />
            </StackPanel>
        </Grid>

        <StackPanel Grid.Column="1"
                    Grid.Row="0"
                    Grid.RowSpan="2"
                    BorderBrush="Gray"
                    BorderThickness="0 1 1 1">

        </StackPanel>

        <ScrollViewer x:Name="scrollImageTarget"
                      PointerWheelChanged="scrollImageTarget_PointerWheelChanged"
                      HorizontalScrollBarVisibility="Auto"
                      VerticalScrollBarVisibility="Auto"
                      ZoomMode="Disabled"
                      Grid.Column="2"
                      Grid.Row="0"
                      BorderBrush="Gray"
                      BorderThickness="0 1 1 1">
            <Image x:Name="mainImage"
                   Source="{Binding Image}"
                   Margin="5" />
        </ScrollViewer>

        <StackPanel Grid.Column="2"
                    Grid.Row="2"
                    BorderBrush="Gray"
                    BorderThickness="0 0 1 1">

        </StackPanel>
    </Grid>
</Window>
